<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/_12sdp"
    tools:context=".MainActivity"
    >

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintRight_toLeftOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/searchNotesLayout"
        android:src="@drawable/icon_menu"
        android:background="@drawable/transparent_bg"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Notes"
        app:layout_constraintLeft_toRightOf="@id/menuButton"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_8sdp"
        android:textSize="@dimen/_20sdp"
        />
    <LinearLayout
        android:id="@+id/searchNotesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:background="@drawable/search_bg"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/icon_search"
            android:layout_marginEnd="@dimen/_8sdp"
            android:contentDescription="search icon"
            />
        <EditText
            android:id="@+id/searchNotes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:background="@null"
            android:textColor="@color/black"
            android:imeOptions="actionSearch"
            android:importantForAutofill="no"
            android:hint="Search Notes"
            />
    </LinearLayout>
    <ImageButton
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/create_new_note_button"
        android:src="@drawable/icon_add"
        android:padding="@dimen/_10sdp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/_12sdp"
        android:contentDescription="add new note button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>